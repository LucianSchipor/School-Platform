<Window x:Class="School_Platform.Views.Dialogs.Change_Teacher_Subjects_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_Platform.Views.Dialogs"
        mc:Ignorable="d"
        Title="Change_Teacher_Subjects_Dialog" Height="450" Width="800">
    <Grid Background="CornflowerBlue">
        <Grid Margin="100" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <ListBox ItemsSource="{Binding Subjects}">
                
            </ListBox>
            <WrapPanel Grid.Column="1" Orientation="Vertical">
                <Button Content="Add subject"/>
                <Button Content="Remove subject"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
